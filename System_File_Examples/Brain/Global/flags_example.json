{
  "metadata": {
    "created_by": "Brain",
    "purpose": "Dynamic CLI flag definitions",
    "version": "1.0"
  },
  "categories": {
    "mode_flags": {
      "demo": {
        "flag": "--demo",
        "description": "Demo mode with simulated mining"
      },
      "test": {
        "flag": "--test-mode",
        "description": "Test mode with limited attempts"
      },
      "staging": {
        "flag": "--staging",
        "description": "Staging mode (final check)"
      }
    },
    "mining_control": {
      "block": {
        "flag": "--block",
        "type": "int",
        "description": "Mine N blocks per day"
      },
      "block_random": {
        "flag": "--block-random",
        "type": "boolean",
        "description": "Mine random blocks"
      },
      "day": {
        "flag": "--day",
        "type": "int",
        "description": "Run for N days"
      },
      "block_all": {
        "flag": "--block-all",
        "type": "boolean",
        "description": "Mine continuously"
      },
      "day_all": {
        "flag": "--day-all",
        "type": "boolean",
        "description": "Mine continuously until day ends"
      }
    },
    "operation_modes": {
      "continuous": {
        "flag": "--continuous",
        "type": "choice",
        "choices": [
          "blocks",
          "day"
        ],
        "description": "Continuous mode type"
      },
      "always_on": {
        "flag": "--always-on",
        "type": "boolean",
        "description": "Stay running after completion"
      },
      "on_demand": {
        "flag": "--on-demand",
        "type": "boolean",
        "description": "Wake up per block"
      }
    },
    "execution_control": {
      "daemon_mode": {
        "flag": "--daemon-mode",
        "type": "boolean",
        "description": "Run in background",
        "default": true
      },
      "max_daemons": {
        "flag": "--max-daemons",
        "type": "int",
        "description": "Parallel miner count"
      }
    },
    "display_control": {
      "verbose": {
        "flag": "--verbose",
        "type": "boolean",
        "description": "Show detailed output"
      },
      "debug": {
        "flag": "--debug",
        "type": "boolean",
        "description": "Enable debug logs"
      }
    }
  }
}